                <% if(username != undefined && username != ""){ %>
                  <div class="btn-group">
                      <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" data-bs-toggle="static" aria-expanded="false">
